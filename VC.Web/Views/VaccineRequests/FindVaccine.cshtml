@model VC.Web.Models.FindUserViewModel

@{
    ViewData["Title"] = "Register";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<h2 class="text-center title">Paciente</h2>
@if (Model != null)
{
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <form class="form-register">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.User.FullName) :
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.User.FullName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.User.Document) :
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.User.Document)
                    </dd>
                </dl>
            </form>
        </div>
    </div>
    <br>
    @if (Model.FindUserDetailViewModels != null)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    @*<div class="panel-heading">
                            <h3 class="panel-title">Paises</h3>
                        </div>*@
                    <div class="panel-body">
                        <table class="table table-hover table-responsive table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Clínica
                                    </th>
                                    <th>
                                        Dirección
                                    </th>
                                    <th>
                                        Distrito
                                    </th>
                                    <th>
                                        Fecha
                                    </th>
                                    <th>
                                        Estado
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model.FindUserDetailViewModels)
                                {
                                    @if (@item.StatusId == 1)
                                    {
                                        <tr class="text-celeste">
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Clinic)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Address)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.District)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CalendarId)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Status)
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Clinic)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Address)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.District)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CalendarId)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Status)
                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div>
            <h3>El usuario no ha registrado una fecha de vacunación</h3>
        </div>
    }
}
else
{
    <div>
        <h3>El usuario no se encuentra registrado</h3>
    </div>
}
