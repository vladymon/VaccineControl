<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @model VC.Web.Models.LoginViewModel
    <title>@ViewData["Title"] - VC.Web</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/Common.css" />
        <link href="~/css/Login.css" rel="stylesheet" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/Common.css" />
        <link href="~/css/Login.css" rel="stylesheet" asp-append-version="true" />
    </environment>
</head>
@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<body>
    <div class="container body-content">
        <div class="col-md-offset-6 col-md-4">
            <form method="post" class="form-login">
                <h3 class=" text-center">Vacúnese ya!!!</h3>

                <h2 class=" text-center">COVID-19</h2>
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <input asp-for="Username" class="form-control" placeholder="Correo" />
                    <span asp-validation-for="Username" class="text-warning"></span>
                </div>
                <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>

                <div class="form-group">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" />
                    <span asp-validation-for="Password" class="text-warning"></span>
                </div>

                <div class="form-group">
                    <div class="form-check">
                        <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>
                    <span asp-validation-for="RememberMe" class="text-warning"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-block btn-vaccine" />
                    <a asp-controller="Account" asp-action="Register" class="btn btn-block btn-vaccine">Registrarse</a>
                </div>
            </form>
        </div>

    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
</body>
</html>
