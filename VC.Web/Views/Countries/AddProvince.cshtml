@model VC.Common.Entities.Province

@{
    ViewData["Title"] = "Adicionar Provincia";
}

<h2>Adicionar</h2>

<h4>Provincia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddProvince">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdDepartment" />

            <partial name="_Province" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="DetailsDepartment" asp-route-id="@Model.IdDepartment" class="btn btn-success">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
