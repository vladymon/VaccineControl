@model VC.Common.Entities.Vaccine

@{
    ViewData["Title"] = "Create";
}

<h2 class="text-center title">Datos de la vacuna</h2>

<hr />
<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <form asp-action="Create" class="form-register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DosesNumber" class="control-label"></label>
                <input asp-for="DosesNumber" class="form-control" />
                <span asp-validation-for="DosesNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-area="" type="submit" value="Grabar" class="btn btn-block btn-vaccine" />
                <a asp-action="Index" class="btn btn-block btn-vaccine">Regresar</a>
            </div>
        </form>
    </div>
</div>

